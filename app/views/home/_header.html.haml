.home-header__header
  .home-header__header__box
    .home-header__header__box__main
      = link_to root_path do
        .home-header__header__box__main--icon
      .home-header__header__box__main--searchbox
        %i.fas.fa-search
    .home-header__header__box__sub
      .home-header__header__box__sub__left
        .home-header__header__box__sub__left--category
          = link_to "#", class: "categoryBtn", id: "left-category" do
            = "カテゴリー"
            .visibleTree
            %ul.firstMenu__parents
              - @parents.each do |parent|
                %li.firstMenu__parents__parent
                  /= link_to "#{parent.name}", "#", class: "item-link" 

                  %ul.secondMenu__children
                    - parent.children.each do |child|
                      %li.secondMenu__children__child
                        /= link_to "#{child.name}", "#", class: "item-link" 

                        %ul.thirdMenu__grandchildren
                          - child.children.each do |grandchildren|
                            %li.thirdMenu__grandchildren__grandchild
                              /= link_to "#{grandchildren.name}", "#", class: "item-link" 
        .home-header__header__box__sub__left--brand
          = link_to "#", class: "brandBtn", id: "left-category" do
            = "ブランド"

          


        
      .home-header__header__box__sub__right
        - if current_user.nil?
          = link_to "ログイン", new_user_session_path, class: "home-header__header__box__sub__right--log-in" 
            
          = link_to "新規会員登録", new_user_registration_path, class: "home-header__header__box__sub__right--register-user" 
            
        - else
          = link_to "マイページ", user_path(current_user), class:"home-header__header__box__sub__right--mypage" 